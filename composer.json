{
    "name": "pulli/pgp-mailer",
    "type": "library",
    "description": "PGP Support for Symfony Mailer",
    "keywords": ["framework", "symfony", "pgp", "mailer"],
    "license": "MIT",
    "authors": [
        {
            "name": "PuLLi",
            "email": "the@pulli.dev"
        }
    ],
    "require": {
        "php": ">=8.1",
        "symfony/mailer": "^6.2",
        "pear/crypt_gpg": "^1.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.1"
    },
    "autoload": {
        "psr-4": {
            "Pulli\\Mime\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    }
}
